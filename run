#!/usr/bin/env bash

# Inspired on https://github.com/adriancooney/Taskfile
#
# Install an alias, to be able to simply execute `run`
# echo 'alias run=./scripts/run' >> ~/.aliases
#
# Define Docker Compose command prefix...
set -e

function help {
    echo "$0 <task> <args>"
    echo "Tasks:"
    compgen -A function | cat -n
}

function default {
    help
}

function prepare:repo {
    rm -rf wrapper-mingle/vendor
    cd wrapper-mingle
    docker run --rm \
        -v $PWD:/app \
        -v $PWD:/app/packages/mingle \
        -w /app \
        composer install --ignore-platform-reqs --no-scripts
    cd -
}

function setIDS {
    export USER_ID=$(id -u)
    export GROUP_ID=$(id -g)
}

function prepare:container {
    setIDS
    docker compose build
    # Create SQLite database and run migrations
    docker compose up -d
    docker compose exec webapp bash -c "touch database/database.sqlite && php artisan migrate --force"
    docker compose down
}

function dev:server {
    setIDS
    docker compose up --remove-orphans --force-recreate
}

function ci:server {
    setIDS
    docker compose up -d --remove-orphans --force-recreate
}

function dev:npm {
    setIDS
    docker compose exec webapp bash -c "npm ci ; npm run dev"
}

function test:watch {
    gh workflow run run-e2e-tests.yml && \
    sleep 4 && \
    gh run watch $(gh run list --workflow=run-e2e-tests.yml --limit=1 --json databaseId --jq '.[0].databaseId')
}

function database:refresh {
    setIDS
    docker compose exec webapp bash -c "touch database/database.sqlite && php artisan migrate:fresh --force"
}

function dev:build {
    setIDS
    docker compose exec webapp bash -c "npm ci && npm run build && php artisan config:clear"
}

function dev:serve {
    setIDS
    # Stop any running containers
    docker compose down
    # Start the container
    docker compose up -d
    # Build the assets
    docker compose exec webapp bash -c "npm ci && npm run build && php artisan config:clear"
    # Show the logs
    docker compose logs -f
}

TIMEFORMAT="Task completed in %3lR"
time "${@:-default}"
